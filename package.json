{
  "name": "chaplain",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "command -v git >/dev/null 2>&1 && lefthook install || echo 'Skipping lefthook install: git not found'",
    "local:client": "next dev",
    "local:server": "tsx watch src/infrastructure/server/index.ts",
    "local:all": "pnpm run db:up && dotenvx run -- concurrently --kill-others-on-fail -n client,server -c magenta,cyan \"pnpm run local:client\" \"pnpm run local:server\"",
    "dev": "tsx run.ts",
    "build:client": "next build",
    "build:server": "tsup",
    "ci": "pnpm run db:migrate && pnpm run build",
    "build": "dotenvx run -- concurrently --kill-others-on-fail -n client,server -c magenta,cyan \"pnpm run build:client\" \"pnpm run build:server\"",
    "start:client": "next start",
    "start:server": "dotenvx run -- cross-var \"node dist/index.mjs | pino-postgres --connection $DB_URL --pass-through\"",
    "start": "dotenvx run -- concurrently --kill-others-on-fail -n client,server -c magenta,cyan \"pnpm run start:client\" \"pnpm run start:server\"",
    "lint": "biome lint --write --unsafe --no-errors-on-unmatched",
    "format": "biome format --write --no-errors-on-unmatched",
    "auth:generate": "pnpm dlx @better-auth/cli generate --config=\"./src/infrastructure/auth/index.ts\" --output=\"./src/infrastructure/db/schema/auth.schema.ts\"",
    "db:up": "docker compose -f docker-compose.db.yml up -d",
    "db:down": "docker compose -f docker-compose.db.yml down",
    "db:push": "drizzle-kit push --config=\"./src/infrastructure/db/drizzle.config.ts\"",
    "db:generate": "drizzle-kit generate --config=\"./src/infrastructure/db/drizzle.config.ts\"",
    "db:migrate": "drizzle-kit migrate --config=\"./src/infrastructure/db/drizzle.config.ts\"",
    "db:studio": "drizzle-kit studio --config=\"./src/infrastructure/db/drizzle.config.ts\""
  },
  "dependencies": {
    "@hono/node-server": "^1.14.4",
    "@hono/zod-validator": "^0.7.2",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@socket.io/redis-adapter": "^8.3.0",
    "@tanstack/react-query": "^5.81.5",
    "@tanstack/react-query-devtools": "^5.81.5",
    "@yudiel/react-qr-scanner": "^2.3.1",
    "better-auth": "^1.3.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.8.2",
    "hono": "^4.8.3",
    "ioredis": "^5.7.0",
    "lucide-react": "^0.523.0",
    "next": "15.3.4",
    "next-themes": "^0.4.6",
    "node-xlsx": "^0.24.0",
    "pg": "^8.16.2",
    "pino": "^9.7.0",
    "pino-postgres": "^0.0.41",
    "pino-pretty": "^13.0.0",
    "qrcode.react": "^4.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "resend": "^6.0.1",
    "server-only": "^0.0.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0-beta.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@dotenvx/dotenvx": "^1.45.2",
    "@tailwindcss/postcss": "^4",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20",
    "@types/pg": "^8.15.4",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "commitizen": "^4.3.1",
    "concurrently": "^9.2.0",
    "cross-var": "^1.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "drizzle-kit": "^0.31.2",
    "lefthook": "^1.11.14",
    "tailwindcss": "^4",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
